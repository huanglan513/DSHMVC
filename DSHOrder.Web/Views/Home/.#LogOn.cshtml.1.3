@model DSHOrder.Web.Models.LogOnModel
@{
    ViewBag.Title = "都市惠后台管理";
    
    Layout = null;
}
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>@ViewBag.Title</title>@*  <link rel="stylesheet" href="@Url.Content("~/Content/reset.css")" type="text/css" />*@
    <!-- Main Stylesheet -->
    @*    <link rel="stylesheet" href="@Url.Content("~/Content/style.css")" type="text/css" />*@
    <!-- Invalid Stylesheet. This makes stuff look pretty. Remove it if you want the CSS completely valid -->
   @* <link rel="stylesheet" href="@Url.Content("~/Content/invalid.css")" type="text/css" />*@
    <script src="@Url.Content("~/Scripts/jquery.min.js")" type="text/javascript"></script>
    <!-- jQuery Configuration -->
    <script type="text/javascript" src="@Url.Content("~/Scripts/simpla.jquery.configuration.js")"></script>
    <!-- Facebox jQuery Plugin -->
    <script type="text/javascript" src="@Url.Content("~/Scripts/facebox.js")"></script>
    <!-- jQuery WYSIWYG Plugin -->
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery.wysiwyg.js")"></script>
    <!--Validation -->
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
</head>
<body>
    <h1>
        都市惠管理平台</h1>
    @Html.ValidationSummary(true, "登陆失败：")
    @using (Html.BeginForm())
    {
        <div>
            <fieldset>
                <legend>登陆框</legend>
                <table>
                    <col align="right" />
                    <col align="left" />
                    <col align="right" />
                    <tr>
                        <th>@Html.LabelFor(m => m.UserName)
                        </th>
                        <td>@Html.TextBoxFor(m => m.UserName)
                        </td>
                        <td>@Html.ValidationMessageFor(m => m.UserName)
                        </td>
                    </tr>
                    <tr>
                        <th>@Html.LabelFor(m => m.Password)
                        </th>
                        <td>@Html.PasswordFor(m => m.Password)
                        </td>
                        <td>@Html.ValidationMessageFor(m => m.Password)
                        </td>
                    </tr>
                    <tr>
                        <th>
                        </th>
                        <td style="text-align: right">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe)
                        </td>
                        <td>
                        </td>
                    </tr>
                    <tr>
                        <th>
                        </th>
                        <td style="text-align: right">
                            <input type="submit" value="登陆" />
                        </td>
                        <td>
                        </td>
                    </tr>
                </table>
                <div style="display: none">
                    <div class="editor-label">
                    </div>
                    <div class="editor-field">
                    </div>
                    <div class="editor-label">
                    </div>
                    <div class="editor-field">
                    </div>
                    <div class="editor-label">
                    </div>
                    <p>
                    </p>
                </div>
            </fieldset>
        </div>
    }
</body>
</html>
