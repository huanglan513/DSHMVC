@model DSHOrder.Web.Models.UserModel
@{
    ViewBag.Title = "Manage";
}
 <!--Validation -->
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div class="content-box">
    <div class="content-box-header">
        <h3>
            员工信息管理</h3>
        <ul class="content-box-tabs">
            <li><a href="#tab1" class="default-tab">列表</a></li>
            <!-- href must be unique and match the id of target div -->
            <li><a href="#tab2">详细</a></li>
        </ul>
        <div class="clear">
        </div>
    </div>
    <div class="content-box-content">
        <div class="tab-content default-tab" id="tab1">
         @{Html.RenderAction("List", "User");}
        </div>
        <div class="tab-content" id="tab2">
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true, "Account creation was unsuccessful. Please correct the errors and try again.")
                <table>
                    <col align="right" />
                    <col align="left" />
                    <col align="right" />
                    <tr>
                        <th>
                            @Html.LabelFor(m => m.UserName)
                        </th>
                        <td>
                            @Html.TextBoxFor(m => m.UserName)
                        </td>
                        <td>
                            @Html.ValidationMessageFor(m => m.UserName)
                        </td>
                    </tr>
                    <tr>
                        <th>
                            @Html.LabelFor(m => m.Sex)
                        </th>
                        <td style="text-align: justify">
                            @Html.RadioButtonFor(m => m.Sex, true, new { @checked="checked"})男
                            @Html.RadioButtonFor(m => m.Sex, false)女
                        </td>
                        <td>
                        </td>
                    </tr>
                    <tr>
                        <th>@Html.LabelFor(m => m.Title)
                        </th>
                        <td>
                            @Html.TextBoxFor(m => m.Title)
                        </td>
                        <td>
                        </td>
                    </tr>
                    <tr>
                        <th>
                            @Html.LabelFor(m => m.Password)
                        </th>
                        <td>
                            @Html.PasswordFor(m => m.Password)
                        </td>
                        <td>
                            @Html.ValidationMessageFor(m => m.Password)
                        </td>
                    </tr>
                    <tr>
                        <th>@Html.LabelFor(m => m.ConfirmPassword)
                        </th>
                        <td>@Html.PasswordFor(m => m.ConfirmPassword)
                        </td>
                        <td>
                            @Html.ValidationMessageFor(m => m.ConfirmPassword)
                        </td>
                    </tr>
                    <tr>
                        <th>@Html.LabelFor(m => m.Departments)
                        </th>
                        <td>
                            @Html.ListBoxFor(m=>m.Departments, new MultiSelectList(ViewBag.Departments, "DepartmentID", "DepartmentName"), new {Multiple = "multiple"})
                        </td>
                        <td>
                        </td>
                    </tr>
                    <tr>
                        <th>@Html.LabelFor(m => m.RoleId)
                        </th>
                        <td>@Html.DropDownListFor(m => m.RoleId, new SelectList(ViewBag.Roles, "RoleID", "RoleName"))
                        </td>
                        <td>
                        </td>
                    </tr>
                    <tr>
                        <th>
                        </th>
                        <td style="text-align: right">
                            <input type="submit" value="保存" />
                        </td>
                        <td>
                        </td>
                    </tr>
                </table>
            }
        </div>
    </div>
</div>
